    <div class="container">
        <h1>Profile</h1>    
        <form action="/profile" method="POST">

            <!-- Personal Information -->
            <div class="form-group">
                <label for="full-name">Full Name:</label>
                <input type="text" id="full-name" name="full-name" required placeholder="Enter full name">

                <label for="phone-number">Phone Number:</label>
                <input type="tel" id="phone-number" name="profile[number]" required placeholder="Enter phone number">
            </div>


            <label>State & City:</label>
            <select id="state" name="profile[State]">
                <option value="">Select State</option>
                <option value="Maharashtra">Maharashtra</option>
                <option value="Uttar Pradesh">Uttar Pradesh</option>
                <option value="Rajasthan">Rajasthan</option>
                <option value="Tamil Nadu">Tamil Nadu</option>
                <option value="Karnataka">Karnataka</option>
                <option value="Punjab">Punjab</option>
                <option value="West Bengal">West Bengal</option>
                <option value="Gujarat">Gujarat</option>
            </select>
            <select id="city" name="profile[city]">
                <option value="">Select City</option>
                <option value="city1">Delhi</option>
                <option value="city2">Mumbai</option>
                <option value="city3">Bangalore</option>
                <option value="city4">Chennai</option>
                <option value="city5">Kolkata</option>
                <option value="city6">Hyderabad</option>
                <option value="city7">Pune</option>
                <option value="city8">Ahmedabad</option>
                <option value="city9">Jaipur</option>
                <option value="city10">Kochi</option>
            </select>

            <!-- Location Information -->
            <div class="form-group">
                <label for="Nitrogen">Nitrogen:</label>
                <input type="text" id="Nitrogen" name="profile[Nitrogen]" required placeholder="Enter Nitrogen Value (in mm)">

                <label for="Phosporous">Phosporous:</label>
                <input type="text" id="Phosporous" name="profile[Phosporous]" required
                    placeholder="Enter Phosporous value (in mm)">

                <label for="Photasium">Photasium:</label>
                <input type="text" id="Photasium" name="profile[Photasium]" required
                    placeholder="Enter Photasium value (in mm)">
            </div>

            <!-- Farm Information -->

            <button     >Submit Profile</button>
        </form>
    </div>

